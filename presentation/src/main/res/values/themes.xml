    <style name="Widget.MaterialComponents.TextInputLayout.FilledBox.Sign">
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <style name="TransParentTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

