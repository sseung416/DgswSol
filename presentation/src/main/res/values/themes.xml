<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.2ndProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- No action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="backgroundColor">@color/black</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!-- TextView -->
    <style name="TitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BoldTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RegularTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SmallTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ResidentRegistrationNumberTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="background">@color/grey</item>
        <item name="android:width">40dp</item>
        <item name="android:height">40dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <!-- CardView -->
    <style name="CardView.Pin">
        <item name="cardBackgroundColor">@color/grey</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">50dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="CardView.Card">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">20dp</item>
    </style>


    <!-- TextInputLayout -->
    <style name="SignTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">false</item>
        <item name="helperTextEnabled">true</item>
        <!-- color -->
        <item name="boxStrokeColor">@color/main_sky_blue</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <!-- radius -->
        <item name="boxCornerRadiusBottomEnd">30dp</item>
        <item name="boxCornerRadiusBottomStart">30dp</item>
        <item name="boxCornerRadiusTopEnd">30dp</item>
        <item name="boxCornerRadiusTopStart">30dp</item>
    </style>

    <!-- EditText -->
    <style name="SignTextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="hintEnabled">false</item>
        <item name="android:maxLines">1</item>
        <!-- padding -->
        <item name="android:paddingStart">22dp</item>
        <item name="android:paddingEnd">22dp</item>
        <!-- font -->
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">true</item>
    </style>

    <!-- Button -->
    <style name="Widget.AppCompat.Button.MainButton">
        <item name="elevation">2dp</item>
        <item name="android:translationZ">10dp</item>
        <item name="android:background">@drawable/btn_main</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.AppCompat.Button.MainButton.EnableFalse">
        <item name="backgroundTint">@color/light_grey</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Widget.AppCompat.Button.PinButton" parent="Widget.AppCompat.Button">
        <item name="background">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>