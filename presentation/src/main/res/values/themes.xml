<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AppCompat.DayNight.2ndProject" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_sky_blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- No action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
    </style>

    <!-- Splash -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="backgroundColor">@color/black</item>
        <item name="android:windowBackground">@drawable/ic_sol_logo</item>
    </style>

    <!-- TextView -->
    <style name="MoneyTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">50sp</item>
    </style>
    
    <style name="TitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BoldTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BigTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RegularTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SmallTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ResidentRegistrationNumberTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="background">@color/grey</item>
        <item name="android:width">40dp</item>
        <item name="android:height">40dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="SignTextView" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_sky_blue</item>
        <item name="android:layout_marginEnd">13dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <!-- CardView -->
    <style name="PinCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/grey</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="CardView.Card">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">20dp</item>
    </style>

    <style name="CardView.StrokeCard">
        <item name="strokeColor">@color/light_grey</item>
        <item name="strokeWidth">5dp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="CardView.BankImgCard">
        <item name="elevation">0dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

