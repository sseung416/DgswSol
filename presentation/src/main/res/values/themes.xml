    <!-- 밑줄 버전 -->
    <style name="Widget.AppCompat.EditText.Sign">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="TransParentTextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="maxLines">1</item>
        <item name="singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Button -->
    <style name="Widget.AppCompat.Button.MainButton">
        <item name="elevation">2dp</item>
        <item name="android:translationZ">10dp</item>
        <item name="android:background">@drawable/btn_main</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.AppCompat.Button.MainButton.EnableFalse">
        <item name="backgroundTint">@color/light_grey</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Widget.AppCompat.Button.PinButton">
        <item name="android:background">@drawable/selector_btn_number_pad</item>
        <item name="android:textColor">@drawable/selector_tv_number_pad</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.AppCompat.Button.BottomBlueButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/btn_blue_filled</item>
    </style>

