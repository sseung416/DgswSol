<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.view.fragment.IntroFragment">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_sign_up_intro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/main_sky_blue"
            android:text="@string/sign_up"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TextContrastCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login_intro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/main_sky_blue"
            android:text="@string/login"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/btn_sign_up_intro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="시작하기"
            app:layout_constraintBottom_toTopOf="@+id/btn_login_intro"
            app:layout_constraintEnd_toEndOf="@+id/btn_login_intro"
            app:layout_constraintStart_toStartOf="@+id/btn_login_intro" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>